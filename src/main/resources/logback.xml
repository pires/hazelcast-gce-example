<?xml version="1.0"?>
<configuration scan="false">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%m%n</pattern>
    </encoder>
  </appender>

  <root>
    <level value="info" />
  </root>

  <logger name="org.jclouds">
    <level value="DEBUG" />
    <appender-ref ref="STDOUT" />
  </logger>
    
  <logger name="com.github.pires">
    <level value="DEBUG" />
    <appender-ref ref="STDOUT" />
  </logger>
  
</configuration>